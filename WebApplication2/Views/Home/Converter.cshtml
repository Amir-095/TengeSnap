@using System.Linq;
@{
    ViewData["Title"] = "Конвертер";
}
<style>
    body {
        font-family: Arial, sans-serif;
    }

    form {
        background-color: #f2f2f2;
        padding: 20px;
        border-radius: 5px;
        max-width: 45%;
    }

    label {
        display: block;
        margin-bottom: 10px;
    }

    input, select, button {
        width: 100%;
        padding: 10px;
        margin-bottom: 20px;
        border-radius: 5px;
        border: 1px solid #ccc;
    }

    button {
        background-color: #4CAF50;
        color: white;
        cursor: pointer;
    }

        button:hover {
            background-color: #45a049;
        }

    .converted-amount {
        background-color: #4CAF50;
        color: white;
        padding: 10px;
        border-radius: 5px;
        max-width: 500px;
        margin: 20px auto 0;
        text-align: center;
    }
</style>

<h1>Конвертер Валют</h1>
<center>    <form asp-action="Converter" method="post">
        <label for="amount">Сумма в тенге:</label>
        <input type="number" id="amount" name="amount" min="0" step="0.01" required>

        <label for="toCurrency">Конвертировать в:</label>
        <select id="toCurrency" name="toCurrency" required>
            <option value="RUB">Российский рубль</option>
            <option value="EUR">Евро</option>
            <option value="USD">Доллар США</option>
            <option value="BYN">Белорусский рубль</option>
            <option value="CAD">Канадский доллар</option>
            <option value="CNY">Китайский юань</option>
            <option value="JPY">Японская иена</option>
            <option value="KGS">Киргизский сом</option>
            <option value="AUD">Австралийский доллар</option>
        </select>
        <button type="submit">Конвертировать</button>
    </form>
</center>

